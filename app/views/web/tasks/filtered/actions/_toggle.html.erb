<% if task.completed? %>
  <%= link_to(
    "<button title=\"Mark as incomplete\" style=\"background-color: var(--accent-bg)\">✅</button>".html_safe,
    web_tasks_mark_as_incomplete_path(task, back_to: controller_name),
    method: :put
  ) %>
<% else %>
  <%= link_to(
    "<button title=\"Mark as complete\" style=\"background-color: var(--accent-bg)\">ℹ️</button>".html_safe,
    web_tasks_mark_as_completed_path(task, back_to: controller_name),
    method: :put
  ) %>
<% end %>
