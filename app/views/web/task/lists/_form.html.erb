<%= form_with(model: task_list, scope: :task_list, url:, method:) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_area :name, autofocus: true, required: true %>
  </p>

  <p>
    <%= f.submit "Submit" %>
    <%= link_to("Cancel", web_task_lists_path, style: "margin-left: 10px") %>
  </p>
<% end %>
